{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "esnext",
      "DOM"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "eslint.config.mjs"
  ]
}
